<%= form_for(@timetable) do |f| %>
  <% if @timetable.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@timetable.errors.count, "error") %> prohibited this timetable from being saved:</h2>

      <ul>
      <% @timetable.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tr>
      <td><%= t('timetable.classes') %></td>
      <td><%= t('timetable.monday') %></td>
      <td><%= t('timetable.tuesday') %></td>
      <td><%= t('timetable.wednesday') %></td>
      <td><%= t('timetable.thursday') %></td>
      <td><%= t('timetable.friday') %></td>
    </tr>

    <% @timetable.get_ordered_items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= check_box_tag 'items[' + item.id.to_s + '][]', :first, item.first %></td>
        <td><%= check_box_tag 'items[' + item.id.to_s + '][]', :second, item.second %></td>
        <td><%= check_box_tag 'items[' + item.id.to_s + '][]', :third, item.third %></td>
        <td><%= check_box_tag 'items[' + item.id.to_s + '][]', :fourth, item.fourth %></td>
        <td><%= check_box_tag 'items[' + item.id.to_s + '][]', :fifth, item.fifth %></td>
      </tr>
    <% end %>
  </table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
