<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('groups.name') %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t('groups.category') %><br>
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label t('groups.user') %><br>
    <% @users.each do |user| %>
      <%= check_box_tag 'group[user_ids][]', user.id, checked=@group.users.exists?(id: user.id), id: "user_#{user.id}" %> <%= user.name %><br />
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit t('groups.create') %>
  </div>
<% end %>
