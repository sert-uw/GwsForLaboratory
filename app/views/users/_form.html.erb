<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('users.name') %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label t('users.email') %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label t('users.groups') %><br>
    <% @groups.each do |group| %>
      <%= check_box_tag 'user[group_ids][]', group.id, checked=@user.groups.exists?(id: group.id), id: "group_#{group.id}" %> <%= group.name %><br />
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit t('users.create') %>
  </div>
<% end %>
