<h2><%= t('devise.labels.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label t('devise.labels.name') %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('devise.labels.email') %><br />
    <%= f.email_field :email %>
  </div>

  <% if @base_group.present? %>
    <div class="field">
      <%= f.label @base_group.name %><br />
      <% @base_group.children.each do |group| %>
        <%= group.name %> <%= f.radio_button :group_id, group.id, { checked: true } %><br />
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t('devise.labels.password') %><br />
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label t('devise.labels.password_confirm') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.labels.sign_up') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
